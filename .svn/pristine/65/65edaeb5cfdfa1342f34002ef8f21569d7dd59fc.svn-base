    @Test
    public void testDirectedSuccessor() {
        DirectedGraph g = new DirectedGraph();
        g.add();
        g.add();
        g.add();
        g.add(1, 2);
        g.add(1, 3);
        assertEquals(2, g.successor(1, 0));
        assertEquals(3, g.successor(1, 1));
        assertEquals(0, g.successor(3, 0));
    }
